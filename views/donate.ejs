<% layout('/layout/boilerPlate.ejs') %>
<body>
    <div class="container mt-5">
        <form>
            <div class="text-center my-4">
                <h1 class="fw-bold "  style="color: #f48c8c">
                    <i class="bi bi-heart-fill text-success"></i> Support Our Cause
                </h1>
                <p class="lead text-muted">
                    Your small contribution can make a big difference. Please donate generously.
                </p>
            </div>
            <div class="mb-3 col-8 mx-auto">
            <label for="name" class="form-label">Name</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="Enter your name" required>
            </div>
            <div class="mb-3 col-8 mx-auto">
                <label for="address" class="form-label">Address</label>
                <input type="text" class="form-control" id="address" name="address" placeholder="Enter your address"required>
            </div>
            <div class="mb-3 col-8 mx-auto">
                <label for="email" class="form-label">Email</label>
                <input type="text" class="form-control" id="email" name="email" placeholder="Enter your email"required>
            </div>
            <div class="mb-3 col-8 mx-auto">
                <label for="mobileNumber" class="form-label">Mobile Number</label>
                <input type="text" class="form-control" id="mobileNumber" name="mobileNumber" placeholder="Enter mobile number"required>
            </div>
            <div class="mb-3 col-8 mx-auto">
                <label for="donation" class="form-label">Donation Amount</label>
                <input class="form-control" id="donation" name="donation" placeholder="Enter the amount"required>
            </div>
            <button class="btn mb-3" style="margin-left: 13rem ;color:white;background-color: #f48c8c;">Donate</button>
        </form>
    </div>
</body>