<% layout('/layout/boilerPlate.ejs') %>
<style> 
    .card { border-radius: 1rem; }
    .reward-card { border: 1px dashed #6c757d; border-radius: 12px; padding: 15px; }
  </style>
<body class="bg-white">
  <div class="container py-5">
    <div class="row mb-4">
      <div class="col text-center">
        <h2>SheCanFoundation Intern Dashboard</h2>
        <p class="text-muted">Empowering Women, One Step at a Time</p>
      </div>
    </div>

    <div class="row g-4 mb-4">
      <div class="col-md-4">
        <div class="card p-4 shadow-sm text-center">
          <h5>Intern Name</h5>
          <p class="fs-5 fw-bold">Beauty Kumari</p>
        </div>
      </div>

      <div class="col-md-4">
        <div class="card p-4 shadow-sm text-center">
          <h5>Referral Code</h5>
          <p class="fs-5 fw-bold">beauty2025</p>
        </div>
      </div>

      <div class="col-md-4">
        <div class="card p-4 shadow-sm text-center">
          <h5>Total Donations Raised</h5>
          <p class="fs-5 fw-bold text-success">₹5,000</p>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col">
        <h4 class="mb-3">Rewards & Unlockables</h4>
        <div class="row g-3">
          <div class="col-md-4">
            <div class="reward-card">
              <h6>Certificate of Recognition</h6>
              <p>Unlocked after ₹1,000 donations</p>
            </div>
          </div>
          <div class="col-md-4">
            <div class="reward-card">
              <h6>Social Media Feature</h6>
              <p>Unlocked after ₹3,000 donations</p>
            </div>
          </div>
          <div class="col-md-4">
            <div class="reward-card">
              <h6>Top Intern Badge</h6>
              <p>Unlocked after ₹5,000 donations</p>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>
</body>
